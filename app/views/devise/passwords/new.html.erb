<div id="signup-page">
  <div class="container">
    <div class="row-fluid">
      <div class="span4 offset4" id="signup-box">
        <div class="text-center">
          <div class="great-heights-logo">
          		<%= image_tag("great-heights-logo.jpg", :id => "logo-gh") %>
	          <!-- <h3>Great Heights Inventory Tracker</h3> -->
          </div>
        </div>
        <div class="page-bg">
				<h2>Forgot your password?</h2>

				<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
				  <%= f.error_notification %>

				  <div class="form-inputs">
				    <%= f.input :email, :required => true, :autofocus => true %>
				  </div>

				    <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-primary btn-large" %>

				<% end %>

				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>

